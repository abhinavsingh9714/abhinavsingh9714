{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",

  "env": {
    "NEXT_PUBLIC_CHAT_MODE": "mock"
  },

  "headers": [
    {
      "source": "/api/chat",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" },
        { "key": "X-Accel-Buffering", "value": "no" }
      ]
    }
  ]
}
